{
  "name": "randomista",
  "version": "0.0.1",
  "description": "Randomista is a versalile typescript library that empowers to effortlessy generate a myriad of random data",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "jsnext:main": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "browser": "dist/browser/randomista.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-p build:* && npm run build.browser",
    "build.browser": "rollup --config --bundleConfigAsCjs",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "build:esm": "tsc --module esnext --target es2022 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --target es2022 --outDir dist/cjs",
    "changes": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "doc": "typedoc",
    "lint": "eslint ./src --ext .ts",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "release": "node release.js",
    "postinstall": "husky install"
  },
  "dependencies": {
    "date-fns": "^2.30.0",
    "lorem-ipsum": "^2.0.8",
    "randexp": "^0.5.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.3",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "conventional-changelog-cli": "^4.1.0",
    "enquirer": "^2.4.1",
    "eslint": "~8.52.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "rollup": "~4.2.0",
    "ts-jest": "^29.1.1",
    "typedoc": "~0.25.3",
    "typescript": "~5.2.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "collectCoverageFrom": [
      "src/*.{js,ts}"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nabilsliti/randomista.git"
  },
  "homepage": "https://github.com/nabilsliti/randomista#readme",
  "keywords": [
    "random",
    "generator",
    "data",
    "fake",
    "mock",
    "diverse",
    "schema",
    "json"
  ],
  "author": {
    "name": "Nabil Sliti",
    "email": "nabil.sliti.prod@gmail.com"
  },
  "license": "MIT"
}
